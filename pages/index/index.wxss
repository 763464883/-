/*顶部tab栏*/

page{
  background-color: #f0f2f5
}

.scroll-view-H {
  display: flex;
  flex-direction: row;
  /* justify-content: space-around; */
  white-space: nowrap;
  box-sizing: border-box;
  align-items: center;
  /* width: 100%; */
  height: 100rpx;
  background-color: #fff;
  /* border-bottom: 1rpx solid #eaeaea; */
}

.top-item {
  /* width: 137rpx; */
  line-height: 87rpx;
  text-align: center;
  color: #333;
  display: inline-block;
  margin-right: 25rpx;
}

.top-item-selected {
  color: #108ee9;
  border-bottom: 4rpx solid #108ee9;
  font-weight: 600;
}

.top-item-text {
  font-size: 32rpx;
}

/* 去除横向滚动条 */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

/* 广告 */
.addContent{
  width: 750rpx;
  height: 191rpx;
}
/* 视频 */

.video-item {
  margin-top: -8rpx;
}

.video-item-top {
  position: relative;
  width: 750rpx;
  height: 280rpx;
}

.video-content {
  position: absolute;
  width: 750rpx;
  height: 280rpx;
}

.video-item-bottom {
  width: 750rpx;
  height: 94rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding-top: -10rpx;
}

.img-text {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.video-item-bottom-left image {
  width: 66rpx;
  height: 66rpx;
  border-radius: 50%;
  padding: 0 24rpx 10rpx 32rpx;
}

.video-item-bottom-left text {
  width: 70vw;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #333;
  font-size: 24rpx;
  padding: 0 0rpx 10rpx 0rpx;
}

.video-item-bottom-right image {
  width: 22rpx;
  height: 22rpx;
  margin-right: 36rpx;
  padding: 0 0rpx 5rpx 0rpx;
}

.video-item-top-icon {
  position: absolute;
  bottom: 17rpx;
  left: 34rpx;
  right: 50;
  width: 25rpx;
  height: 20rpx;
  /* background: rgba(255, 255, 255, 0.2); */
  z-index: 99999;
}

.video-item-top-playButton{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 62rpx;
  height: 62rpx;
  z-index: 99999;
}

.video-content-text {
  position: absolute;
  top: 12rpx;
  left: 32rpx;
  width: 70vw;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 24rpx;
  color: #fff;
  z-index: 99999;
}

.video-play-number {
  position: absolute;
  bottom: 12rpx;
  left: 82rpx;
  color: #fff;
  font-size: 20rpx;
  z-index: 99999;
}

.video-play-time {
  position: absolute;
  bottom: 17rpx;
  right: 34rpx;
  color: #fff;
  font-size: 20rpx;
  z-index: 99999;
}

.no-list-content{
  position: absolute;
  top: 40%;
  left: 50%;
  transform: translate(-50%,-50%);
  height: 254rpx;
  width: 198rpx;

}

.no-list-content-image{
  height: 159rpx;
  width: 198rpx;
  margin-bottom: 50rpx;
}

.no-list-content-text{
  color: #999999;
  font-size: 24rpx;
}

.video-icon{
  border-radius: 50%;
}